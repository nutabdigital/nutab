# Cache static Next.js assets (JS, CSS) for 1 year - these have content hashes
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 year
/photos/*
  Cache-Control: public, max-age=31536000, immutable

# Cache icons/SVGs for 1 year
/icons/*
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - short cache with revalidation for SEO updates
/*.html
  Cache-Control: public, max-age=0, must-revalidate

/
  Cache-Control: public, max-age=0, must-revalidate
